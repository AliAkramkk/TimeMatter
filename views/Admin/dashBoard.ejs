    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script>
        const monthlyData = '<%= JSON.stringify(monthlyData)%>'
        const paymentData = '<%= JSON.stringify(paymentData)%>'
        let categoryData = '<%= categoryName%>'
        const sales = '<%= JSON.stringify(totalPrice)%>'
        console.log(categoryData)
        var options = {
            series: [
                {
                    data: JSON.parse(monthlyData),
                },
            ],
            chart: {
                height: 350,
                type: "bar",
                events: {
                    click: function (chart, w, e) {
                    },
                },
            },
            colors: [
                'rgba(255, 99, 132, 1)',
                'rgba(255, 159, 64, 1)',
                'rgba(255, 205, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(201, 203, 207, 1)'
            ],
            plotOptions: {
                bar: {
                    columnWidth: "45%",
                    distributed: true,
                },
            },
            dataLabels: {
                enabled: false,
            },
            legend: {
                show: false,
            },
            xaxis: {
                categories: [
                    "Jan",
                    "Feb",
                    "Mar",
                    "Apr",
                    "May",
                    "Jun",
                    "Jul",
                    "Aug",
                    "Sep",
                    "Oct",
                    "Nov",
                    "Dec",
                ],
                labels: {
                    style: {
                        colors: [
                            "rgba(255, 99, 132, 1)",
                            "rgba(255, 159, 64, 1)",
                            "rgba(255, 205, 86, 1)",
                            "rgba(75, 192, 192, 1)",
                            "rgba(54, 162, 235, 1)",
                            "rgba(153, 102, 255, 1)",
                            "rgba(201, 203, 207, 1)",
                        ],
                        fontSize: "12px",
                    },
                },
            },
        };

        var chart = new ApexCharts(document.querySelector("#chart"), options);
        chart.render();
    </script>

    <script>
        var options = {
            series: [
                ...JSON.parse(paymentData),

            ],
            chart: {
                width: 500,
                type: 'pie',
            },
            labels: ['Cash on Delivery', 'Online payment', 'Wallet'],
            responsive: [{
                breakpoint: 480,
                options: {
                    chart: {
                        width: 200
                    },
                    legend: {
                        position: 'bottom'
                    }
                }
            }]
        };
        var chart = new ApexCharts(document.querySelector("#paymentChart"), options);
        chart.render();
    </script>
    <script>

        var options = {
            series: [
                ...JSON.parse(sales),

            ],
            chart: {
                width: 500,
                type: 'pie',
            },
            labels: [...categoryData.split(',')],
            responsive: [{
                breakpoint: 480,
                options: {
                    chart: {
                        width: 200
                    },
                    legend: {
                        position: 'bottom'
                    }
                }
            }]
        };
        var chart = new ApexCharts(document.querySelector("#categoryChart"), options);
        chart.render();
    </script>


