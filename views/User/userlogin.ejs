        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="/login/" method="post"><br>
                            <h3 class="text-center text-dark">User Login</h3>
                            <div class="form-group">
                                <label class="text-dark">Email:</label><br>
                                <input type="email" name="email" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-dark">Password:</label><br>
                                <input type="password" name="password" id="password" class="form-control" required>
                                <div class="d-flex justify-content-end">
                                    <label for="Invalid" class="text-danger"></label>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-danger btn-md" value="Log In"><br>
                            </div>
                            <p class="text-danger">
                                <%= message %>
                            </p>
                        </form>
