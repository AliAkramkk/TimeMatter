<form action="/resetPass?email=<%= message%>" method="post">
  <div class="form-group">
    <label for="password">New Password</label>
    <input type="password" name="password" id="password" class="form-control" placeholder="Enter your new password" required />
  </div>
  
  <div class="form-group">
    <label for="confirmPassword">Confirm Password</label>
    <input type="password" name="conpassword" id="confirmPassword" class="form-control" placeholder="Confirm your new password" required />
  </div>
  
  <button type="submit" class="btn btn-danger btn-md">Reset Password</button>
</form>
