
<%- include('./partials/header.ejs') %>

<div class="container-fluid d-flex flex-column justify-content-center align-items-center vh-100">
  <div class="col-md-10 col-lg-6 col-xl-5">
      <p class="text-center h1 fw-bold mb-5">RESET PASSWORD</p>
      <% if (flashes.error) { %>
          <div class="container alert alert-danger alert-dismissible fade show" role="alert">
              <%= flashes.error %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <% } %>

              <form class="mx-1 mx-md-4" action="/changePassword" method="POST">





                  <div class="form-group d-flex align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 pt-3 mt-3"></i>
                      <div class="flex-fill">
                          <label class="form-label" for="form3Example4c">New password</label>
                          <input type="password" id="form3Example4c" class="<% if (validationHelper(flashes,'password')){
                              %>  form-control is-invalid <% } else { %> form-control <% } %>"
                              name="password" aria-describedby="validationServer03Feedback" />
                          <div id="validationServer03Feedback" class="invalid-feedback">

                              <%= validationHelper(flashes,"password") %>

                          </div>
                      </div>
                  </div>





                  <div class="form-group d-flex align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 pt-3 mt-3"></i>
                      <div class="flex-fill">
                          <label class="form-label" for="form3Example4cd">Repeat your
                              password</label>
                          <input type="password" id="form3Example4cd" class="<% if (validationHelper(flashes,'passwordConfirm')){
                              %>  form-control is-invalid <% } else { %> form-control <% } %>"
                              name="passwordConfirm" aria-describedby="passwordConfirmInvalidFeedback" />
                          <div class="invalid-feedback" id="passwordConfirmInvalidFeedback">
                              <%= validationHelper(flashes,"passwordConfirm") %>
                          </div>
                      </div>
                  </div>

                  <div class="text-center mt-4">
                      <button type="submit" class="btn btn-lg loginButton">Confirm</button>
                  </div>
              </form>
  </div>
</div>
<%- include('./partials/footer.ejs') %>